@model Todo.Web.Clients.Models.CreateTodoListInputModel
@{ ViewData["Title"] = "New List"; }

<div class="row justify-content-center">
    <div class="col-md-8 col-xl-6">
        <div class="card card-fancy p-4">
            <h2 class="h4 fw-semibold text-black mb-4">Create new list</h2>

            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div class="mb-3 text-black">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" required autocomplete="off" />
                    <span asp-validation-for="Description" class="text-warning small"></span>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-light flex-grow-1">
                        <i class="bi bi-check-lg me-1"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light text-black">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> }
