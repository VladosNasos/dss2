@model Todo.Web.Clients.Models.TodoListModel
@{ ViewData["Title"] = "Edit List"; }

<div class="row justify-content-center">
    <div class="col-md-8 col-xl-6">
        <div class="card card-fancy p-4">
            <h2 class="h4 fw-semibold mb-4">Edit list</h2>

            <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input asp-for="Description" class="form-control" required autocomplete="off" />
                    <span asp-validation-for="Description" class="text-warning small"></span>
                </div>

                <div class="form-check form-switch mb-4 ps-0">
                    <input asp-for="IsActive" class="form-check-input ms-0" />
                    <label asp-for="IsActive" class="form-check-label ms-3">Active</label>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-light flex-grow-1">
                        <i class="bi bi-check-lg me-1"></i> Update
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> }
